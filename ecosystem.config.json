{
  "apps": [{
    "name": "repauto-backend",
    "script": "src/index.js",
    "cwd": "./backend",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "production",
      "PORT": 80
    },
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_file": "./logs/combined.log",
    "time": true,
    "max_restarts": 10,
    "min_uptime": "10s",
    "watch": false,
    "ignore_watch": ["node_modules", "logs"],
    "restart_delay": 4000
  }]
}
